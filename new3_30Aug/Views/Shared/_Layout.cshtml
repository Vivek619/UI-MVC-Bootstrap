<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @{
        var activeDashboardNavLink = ViewBag.Title == "Home Page" ? "active" : "";
        var activePostsNavLink = ViewBag.Title == "Posts" ? "active" : "";
        var activeCategoriesNavLink = ViewBag.Title == "Categories" ? "active" : "";
        var activeUsersNavLink = ViewBag.Title == "Users" ? "active" : "";
    }
</head>
<body>

    <nav class="navbar navbar-expand-sm navbar-dark bg-dark p-0">
        <div class="container">
            <a href="/home/index" class="navbar-brand">Blogen</a>
            <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav">
                    <li class="nav-item px-2">
                        <a href="/home/index" class="nav-link @activeDashboardNavLink">Dashboard</a>
                    </li>
                    <li class="nav-item px-2">
                        <a href="/home/posts" class="nav-link @activePostsNavLink">Posts</a>
                    </li>
                    <li class="nav-item px-2">
                        <a href="/home/categories" class="nav-link @activeCategoriesNavLink">Categories</a>
                    </li>
                    <li class="nav-item px-2">
                        <a href="/home/users" class="nav-link @activeUsersNavLink">Users</a>
                    </li>
                </ul>

                <ul class="navbar-nav ml-auto">
                    <li class="nav-item dropdown mr-3">
                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-user"></i> Welcome Vivek
                        </a>
                        <div class="dropdown-menu">
                            <a href="/home/profile" class="dropdown-item">
                                <i class="fa fa-user-circle"></i> Profile
                            </a>
                            <a href="/home/settings" class="dropdown-item">
                                <i class="fa fa-cog"></i> Settings
                            </a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a href="/Login/login" class="nav-link">
                            <i class="fa fa-user-times"></i> Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <div class="">
        @RenderBody()
    </div>

    <footer id="main-footer" class="bg-dark text-white mt-5 p-5">
        <div class="container">
            <div class="row">
                <div class="col">
                    <p class="lead text-center">
                        Copyright &copy; <span id="year"></span>
                        Blogen
                    </p>
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        $('#year').text(new Date().getFullYear().toString())
    </script>

</body>
</html>


